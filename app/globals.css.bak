@import "tailwindcss";

/* Tailwind v4: Use .dark class instead of prefers-color-scheme */
@variant dark (&:where(.dark, .dark *));

/* === LIGHT THEME (default) === */
:root {
  color-scheme: light;
  --background: #ffffff;
  --foreground: #0f172a;
  --card: #ffffff;
  --card-foreground: #0f172a;
  --popover: #ffffff;
  --popover-foreground: #0f172a;
  --primary: #2563eb;
  --primary-foreground: #ffffff;
  --secondary: #f1f5f9;
  --secondary-foreground: #1e293b;
  --muted: #f1f5f9;
  --muted-foreground: #475569;
  --accent: #eff6ff;
  --accent-foreground: #1e40af;
  --destructive: #dc2626;
  --destructive-foreground: #ffffff;
  --border: #e2e8f0;
  --input: #e2e8f0;
  --ring: #2563eb;
  --radius: 0.5rem;

  /* Charts */
  --color-1: #2563eb;
  --color-2: #7c3aed;
  --color-3: #10b981;
  --color-4: #f59e0b;
  --color-5: #ec4899;

  /* Custom */
  --text-glow: none;
}

/* === DARK THEME === */
.dark {
  color-scheme: dark;
  --background: #030712;
  --foreground: #f8fafc;
  --card: rgba(17, 24, 39, 0.4);
  --card-foreground: #f8fafc;
  --popover: #0b1121;
  --popover-foreground: #f8fafc;
  --primary: #06b6d4;
  --primary-foreground: #000000;
  --secondary: rgba(30, 41, 59, 0.5);
  --secondary-foreground: #cbd5e1;
  --muted: rgba(148, 163, 184, 0.2);
  --muted-foreground: #94a3b8;
  --accent: rgba(6, 182, 212, 0.1);
  --accent-foreground: #22d3ee;
  --destructive: #7f1d1d;
  --destructive-foreground: #fca5a5;
  --border: rgba(255, 255, 255, 0.08);
  --input: rgba(255, 255, 255, 0.1);
  --ring: rgba(6, 182, 212, 0.4);

  /* Charts */
  --color-1: #06b6d4;
  --color-2: #8b5cf6;
  --color-3: #10b981;
  --color-4: #f59e0b;
  --color-5: #ec4899;

  /* Custom */
  --text-glow: 0 0 10px rgba(6, 182, 212, 0.5);
}

@theme inline {
  --color-background: var(--background);
  --color-foreground: var(--foreground);
  --color-card: var(--card);
  --color-card-foreground: var(--card-foreground);
  --color-popover: var(--popover);
  --color-popover-foreground: var(--popover-foreground);
  --color-primary: var(--primary);
  --color-primary-foreground: var(--primary-foreground);
  --color-secondary: var(--secondary);
  --color-secondary-foreground: var(--secondary-foreground);
  --color-muted: var(--muted);
  --color-muted-foreground: var(--muted-foreground);
  --color-accent: var(--accent);
  --color-accent-foreground: var(--accent-foreground);
  --color-destructive: var(--destructive);
  --color-destructive-foreground: var(--destructive-foreground);
  --color-border: var(--border);
  --color-input: var(--input);
  --color-ring: var(--ring);
  --radius-sm: calc(var(--radius) - 4px);
  --radius-md: calc(var(--radius) - 2px);
  --radius-lg: var(--radius);
  --radius-xl: calc(var(--radius) + 4px);
}

/* === BODY === */
body {
  background-color: var(--background);
  color: var(--foreground);
  font-family: var(--font-geist-mono), ui-monospace, monospace;
  -webkit-font-smoothing: antialiased;
  -moz-osx-font-smoothing: grayscale;
}

/* === FONT UTILITIES === */
.font-mono {
  font-family: var(--font-geist-mono), ui-monospace, monospace;
}

/* Dark mode grid background */
.dark body {
  background-image:
    linear-gradient(to right, rgba(255,255,255,0.02) 1px, transparent 1px),
    linear-gradient(to bottom, rgba(255,255,255,0.02) 1px, transparent 1px);
  background-size: 40px 40px;
}

/* === GLASS PANEL (dark only) === */
.dark .glass-panel {
  background: rgba(17, 24, 39, 0.4);
  backdrop-filter: blur(8px);
  border: 1px solid rgba(255, 255, 255, 0.05);
  box-shadow: 0 4px 6px -1px rgba(0, 0, 0, 0.1), 0 2px 4px -2px rgba(0, 0, 0, 0.1);
}

/* Glass panel in light mode */
.glass-panel {
  background: var(--card);
}

/* === GLOW HOVER (dark only) === */
.dark .glow-hover:hover {
  box-shadow: 0 0 15px rgba(6, 182, 212, 0.2);
  border-color: rgba(6, 182, 212, 0.4);
}

/* === SCROLLBAR === */
/* Light */
::-webkit-scrollbar {
  width: 8px;
  height: 8px;
}
::-webkit-scrollbar-track {
  background: #f1f5f9;
}
::-webkit-scrollbar-thumb {
  background: #cbd5e1;
  border-radius: 4px;
}
::-webkit-scrollbar-thumb:hover {
  background: #2563eb;
}

/* Dark scrollbar */
.dark ::-webkit-scrollbar-track {
  background: #030712;
}
.dark ::-webkit-scrollbar-thumb {
  background: #1e293b;
}
.dark ::-webkit-scrollbar-thumb:hover {
  background: #06b6d4;
}

/* === COMMAND PALETTE (cmdk) === */
[cmdk-root] { max-width: 640px; }
[cmdk-input] {
  font-family: inherit;
  border: none;
  width: 100%;
  font-size: 14px;
  padding: 12px;
  outline: none;
  background: transparent;
  color: var(--foreground);
  border-bottom: 1px solid var(--border);
}
[cmdk-input]::placeholder { color: var(--muted-foreground); }
[cmdk-list] {
  height: min(400px, calc(var(--cmdk-list-height)));
  max-height: 400px;
  overflow: auto;
  overscroll-behavior: contain;
  transition: 100ms ease;
  transition-property: height;
  padding: 8px;
}
[cmdk-group-heading] {
  user-select: none;
  font-size: 12px;
  font-weight: 600;
  color: var(--muted-foreground);
  padding: 8px;
  display: flex;
  align-items: center;
}
[cmdk-item] {
  content-visibility: auto;
  cursor: pointer;
  height: 40px;
  border-radius: var(--radius);
  font-size: 14px;
  display: flex;
  align-items: center;
  gap: 12px;
  padding: 0 12px;
  color: var(--muted-foreground);
  user-select: none;
  will-change: background, color;
  transition: all 150ms ease;
}
[cmdk-item][aria-selected='true'] {
  background: var(--accent);
  color: var(--accent-foreground);
}
.dark [cmdk-item][aria-selected='true'] {
  box-shadow: 0 0 10px rgba(6, 182, 212, 0.1);
}
[cmdk-item][aria-disabled='true'] {
  color: var(--muted-foreground);
  opacity: 0.5;
  cursor: not-allowed;
}
[cmdk-separator] {
  height: 1px;
  width: 100%;
  background: var(--border);
  margin: 4px 0;
}

/* === RECHARTS GRID === */
.recharts-cartesian-grid-horizontal line,
.recharts-cartesian-grid-vertical line {
  stroke: var(--border) !important;
}

/* === NATIVE FORM CONTROLS (dark mode) === */
.dark input[type="date"],
.dark input[type="time"],
.dark input[type="datetime-local"],
.dark select {
  color-scheme: dark;
}

.dark input[type="date"]::-webkit-calendar-picker-indicator,
.dark input[type="time"]::-webkit-calendar-picker-indicator,
.dark input[type="datetime-local"]::-webkit-calendar-picker-indicator {
  filter: invert(1);
}

/* Native select option styling (limited browser support) */
.dark option {
  background-color: #1e293b;
  color: #f8fafc;
}

/* Autofill styling */
.dark input:-webkit-autofill,
.dark input:-webkit-autofill:hover,
.dark input:-webkit-autofill:focus,
.dark textarea:-webkit-autofill,
.dark textarea:-webkit-autofill:hover,
.dark textarea:-webkit-autofill:focus,
.dark select:-webkit-autofill,
.dark select:-webkit-autofill:hover,
.dark select:-webkit-autofill:focus {
  -webkit-text-fill-color: #f8fafc;
  -webkit-box-shadow: 0 0 0px 1000px #1e293b inset;
  transition: background-color 5000s ease-in-out 0s;
}
